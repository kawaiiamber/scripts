#!/bin/sh

level=$(amixer get Master | tail -n 1 | awk -F"[][]" '{print $2}' | sed "s/\%//")
state=$(amixer get Master | tail -n 1 | awk -F"[][]" '{print $6}')

if [ $state = "off" ]
then
	printf "%s%d%%\n" "ğŸ”‡ " "$level"
else
	if [ $level -le 33 ]
	then
		printf "%s%d%%\n" "ğŸ”ˆ " "$level"
	elif [ $level -gt 33 ] && [ $level -le 66 ]
	then
		printf "%s%d%%\n" "ğŸ”‰ " "$level"
	elif [ $level -gt 66 ]
	then
		printf "%s%d%%\n" "ğŸ”Š " "$level"
	fi
fi
